@model ShoppingCartVM
@using Microsoft.Extensions.Options

<form method="post">
	<div class="container-fluid">
		<div class="row px-xl-5">
			<div class="col-lg-8">
				<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
				<div class="bg-light p-30 mb-5">
					<div class="row">
						<div class="col-md-12 form-group">
							<label asp-for="FullName" class=" text-muted"></label>
							<input asp-for="FullName" type="text" class="form-control">
							<span asp-validation-for="FullName"></span>
						</div>
						<div class="col-md-12 form-group">
							<label asp-for="Email" class="text-muted"></label>
							<input asp-for="Email" type="text" class="form-control">
							<span asp-validation-for="Email"></span>
						</div>
						<div class="col-md-12 form-group">
							<label asp-for="Address" class="text-muted"></label>
							<input asp-for="Address" type="text" class="form-control">
							<span asp-validation-for="Address"></span>
						</div>
						<div class="col-md-6 form-group">
							<label asp-for="City" class="text-muted"></label>
							<input asp-for="City" type="text" class="form-control">
							<span asp-validation-for="City"></span>
						</div>
						<div class="col-md-6 form-group">
							<label asp-for="PhoneNumber" class="text-muted"></label>
							<input asp-for="PhoneNumber" type="text" class="form-control">
							<span asp-validation-for="PhoneNumber"></span>
						</div>
						<div class="col-md-12">
							<div class="custom-control custom-checkbox">
								<input type="checkbox" class="custom-control-input" id="shipto">
								<label class="custom-control-label" for="shipto" data-toggle="collapse" data-target="#shipping-address">Ship to different address</label>
							</div>
						</div>
					</div>
				</div>
				<div class="collapse mb-5" id="shipping-address">
					<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Shipping Address</span></h5>
					<div class="bg-light p-30">
						<div class="row">
							<div class="col-md-6 form-group">
								<label>First Name</label>
								<input class="form-control" type="text" placeholder="John">
							</div>
							<div class="col-md-6 form-group">
								<label>Last Name</label>
								<input class="form-control" type="text" placeholder="Doe">
							</div>
							<div class="col-md-6 form-group">
								<label>E-mail</label>
								<input class="form-control" type="text" placeholder="example@email.com">
							</div>
							<div class="col-md-6 form-group">
								<label>Mobile No</label>
								<input class="form-control" type="text" placeholder="+123 456 789">
							</div>
							<div class="col-md-6 form-group">
								<label>Address Line 1</label>
								<input class="form-control" type="text" placeholder="123 Street">
							</div>
							<div class="col-md-6 form-group">
								<label>Address Line 2</label>
								<input class="form-control" type="text" placeholder="123 Street">
							</div>
							<div class="col-md-6 form-group">
								<label>Country</label>
								<select class="custom-select">
									<option selected>United States</option>
									<option>Afghanistan</option>
									<option>Albania</option>
									<option>Algeria</option>
								</select>
							</div>
							<div class="col-md-6 form-group">
								<label>City</label>
								<input class="form-control" type="text" placeholder="New York">
							</div>
							<div class="col-md-6 form-group">
								<label>State</label>
								<input class="form-control" type="text" placeholder="New York">
							</div>
							<div class="col-md-6 form-group">
								<label>ZIP Code</label>
								<input class="form-control" type="text" placeholder="123">
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-4">
				<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Total</span></h5>
				<div class="bg-light p-30 mb-5">
					<div class="border-bottom">
						<h6 class="mb-3">Products</h6>
						@foreach (var item in Model.CartItems)
						{
							<div class="d-flex justify-content-between">
								<p>@item.ProductName</p>
								<p>$@item.Price</p>
							</div>
						}
					</div>
					<div class="pt-2">
						<div class="d-flex justify-content-between mt-2">
							<h5>Total</h5>
							<h5>$@Model.TotalAmount</h5>
						</div>
					</div>
					<button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Place Order</button>
				</div>
			</div>
		</div>
	</div>
</form>