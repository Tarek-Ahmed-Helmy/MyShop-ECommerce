@model IEnumerable<Category>

@{
	ViewBag.PageTitle = "Category Managment";
	ViewBag.CardTitle = "View Categories";
}

<table class="table table-hover" width="100%">
	<thead class="fw-bold">
		<tr>
			<td>Name</td>
			<td>Description</td>
			<td>Date Created</td>
			<td>Actions</td>
		</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.CategoryName</td>
			<td>@Html.Raw(item.CategoryDescription)</td>
			<td>@item.CreatedAt</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
				<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
			</td>
		</tr>
	}
</table>
<hr />
<div>
	<a asp-action="Create" class="btn btn-primary">Create New Category</a>
</div>